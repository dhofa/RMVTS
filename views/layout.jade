    script.
      // Check browser support
      if (typeof(Storage) !== "undefined") {
        // Retrieve
        document.getElementById("nama_user").innerHTML = localStorage.getItem("username");
        document.getElementById("email_user").innerHTML = localStorage.getItem("email");
        document.getElementById("foto_left").src = localStorage.getItem("foto_user");
        document.getElementById("foto_right").src = localStorage.getItem("foto_user");        
      } else {
        document.getElementById("nama_user").innerHTML = "Sorry, your browser does not support Web Storage...";
      }

      var btn_logout = document.getElementById("do_logout");
      btn_logout.addEventListener('click', ()=>{
        //- delete_cookie("token", "/"s, "rmvts.herokuapp.com       console.log(document.cookie);
        document.cookie = 'token=;expires=Thu, 01 Jan 1970 00:00:01 GMT;';
      });
 